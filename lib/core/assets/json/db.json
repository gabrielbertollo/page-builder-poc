    "form": {
        "type": "DrawerPage",
        "title": {
            "type": "TextComponent",
            "text": "Ouvidoria"
        },
        "body": {
            "type": "FormComponent",
            "children": [
                {
                    "type": "TextComponent",
                    "text": "Preencha o formulário abaixo para enviar sua mensagem"
                },
                {
                    "type": "TextInputComponent",
                    "label": "Nome",
                    "required": true
                },
                {
                    "type": "TextInputComponent",
                    "label": "Email",
                    "required": true
                },
                {
                    "type": "TextInputComponent",
                    "label": "Telefone",
                    "required": true
                },
                {
                    "type": "TextInputComponent",
                    "label": "Mensagem",
                    "required": true
                },
                {
                    "type": "FileInputComponent",
                    "label": "Anexo",
                    "required": false
                }
            ]
        }
