        "body": {
            "type": "GridViewComponent",
            "children": [
                {
                    "type": "CardComponent",
                    "title": "Ouvidoria",
                    "subtitle": "Algum problema?",
                    "iconUrl": "https://cdn-icons-png.flaticon.com/512/2838/2838912.png",
                    "verticalSize": 1,
